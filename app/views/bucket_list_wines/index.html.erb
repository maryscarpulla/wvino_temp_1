<div class="page-header">
  <h1>
    Bucket list wines
    <a href="/bucket_list_wines/new" class="btn btn-lg btn-success">New Bucket list wine</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Wine</th>
        <th>Actions</th>
      </tr>

      <% @bucket_list_wines.each do |bucket_list_wine| %>
      <tr>
        <td><%= bucket_list_wine.user.email %></td>
        <td><%= bucket_list_wine.wine.name %></td>
        <td>
          <a href="/bucket_list_wines/<%= bucket_list_wine.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == bucket_list_wine.user %>
            <a href="/bucket_list_wines/<%= bucket_list_wine.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_bucket_list_wine/<%= bucket_list_wine.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
