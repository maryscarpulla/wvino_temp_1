<div class="page-header">
  <h1>
    My wines
    <a href="/my_wines/new" class="btn btn-lg btn-success">New My wine</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Wine</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @my_wines.each do |my_wine| %>
      <tr>
        <td>
          <% if my_wine.wine.present? %>
            <a href="/wines/<%= my_wine.wine.id %>">
              <%= my_wine.wine.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if my_wine.user.present? %>
            <a href="/users/<%= my_wine.user.id %>">
              <%= my_wine.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/my_wines/<%= my_wine.id %>" class="btn btn-primary">Show</a>
          <a href="/my_wines/<%= my_wine.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_my_wine/<%= my_wine.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @my_wines, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
